<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.example.analysisimage">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 读取图片中的位置信息 -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION"/>

    <!--必须有相机才能安装程序 (如果不支持camera2 会在安装过程中就会因条件不符合而禁止安装-->
    <!--<uses-feature android:name="android.hardware.camera2"-->
    <!--android:required="true"/>-->

    <application
            android:allowBackup="true"
            android:name=".AnalysisApplication"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" tools:replace="android:name">
        <activity android:name=".android10.TestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.PlantAnalysisActivity">

        </activity>

        <activity android:name=".activity.camerax.PlantAnalysisActivityCameraX"/>
    </application>

</manifest>